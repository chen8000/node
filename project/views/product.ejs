

<%- include public/header.ejs%>

<div class="container-fluid">
    <div class="row">
        
        <%- include public/aslideleft.ejs%>

        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">商品管理
                </li>
                <li class="active">商品列表
                </li>
            </ol>
            <div class="panel panel-default">
                <div class="panel-heading">
                    搜索
                </div>
                <div class="panel-body">
                    <form role="form" class="form-inline">
                        <div class="form-group">
                            <label for="name">名称</label>
                            <input type="text" class="form-control" id="name" placeholder="请输入名称">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-default">开始搜索</button>
                        </div>
                    </form>
                </div>
            </div>
            
            <!--
                列表展示
            -->
            <div class="table-responsive">
                <table class="table table-striped ">
                    <thead>
                    <tr>
                        <th width="5%">编号</th>
                        <th width="10%">图标</th>
                        <th width="25%">名称</th>
                        <th width="20%">价格</th>
                        <th width="20%">邮费</th>
                       
                        <th width="20%" class="text-center">操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(var i = 0;i<list.length;i++) {%>
                        <tr>
                            <td><%= i+1%></td>
                            <td><img style="width:20px;" src='<%= list[i].pic%>' alt=""></td>
                            <td><%= list[i].title%></td>
                            <td><%= list[i].price%></td>
                            <td><%= list[i].fee%></td>
                        
                            <td class="text-center"> 
                                <a class="btn btn-success" href="/productedit?id=<%= list[i]._id%>">修改</a> 
                                <a class="btn btn-danger" href="/productdelete?id=<%= list[i]._id%>&picPath=<%= list[i].pic%>">删除</a>
                            </td>
                        </tr>
                    <% } %>
					

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

</body>
</html>